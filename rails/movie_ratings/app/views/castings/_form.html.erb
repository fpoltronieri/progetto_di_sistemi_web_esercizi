<%= form_with model: [movie, Casting.new], local: true do |form| %>
  <div class="field">
    <%= form.label :actor_id, "Actor" %>
    <%= form.collection_select :actor_id,
                           Actor.all,
                           :id,
                           :name,
                           prompt: "Select an Actor" %>
  </div>

  <div class="field">
    <%= form.label :character, "character" %>
    <%= form.text_field :character %>
  </div>

  <%= form.submit %>
<% end %>
